{
  "name": "solidity",
  "version": "1.0.0",
  "type": "module",
  "main": "backend/server.js", 
  "scripts": {
  
    "build:css": "tailwindcss -i ./backend/src/input.css -o ./frontend/main.css --minify",
    "watch:css": "tailwindcss -i ./backend/src/input.css -o ./frontend/main.css --watch",
    "start:server": "node backend/server.js",
    "dev": "concurrently \"npm run watch:css\" \"npm run start:server\"",
    
  
    "build": "npm run build:css", 

    "start": "node backend/server.js"
  },
  "dependencies": {
 
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  }
}